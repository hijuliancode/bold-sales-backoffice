{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@core/*": ["core/*"],
      "@models/*": ["core/models/*"],
      "@types/*": ["core/types/*"],
      "@data/*": ["data/*"],
      "@hooks/*": ["hooks/*"],
      "@layouts/*": ["layouts/*"],
      "@modules/*": ["modules/*"],
      "@pages/*": ["pages/*"],
      "@pagesApi/*": ["pages/api/*"],
      "@utils/*": ["utils/*"],
      "@home/*": ["modules/home/*"],
      "@sales/*": ["modules/sales/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
